<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/game_end_record_dialog_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="-- 排行榜 --"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/game_end_record_dialog_tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_end_record_dialog_top"
        android:gravity="center"
        android:text="請輸入您的id!!"
        android:textColor="@color/my_red"
        android:textSize="14sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/game_end_record_dialog_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_end_record_dialog_tv_hint"
        android:hint="請輸入您的id" />

    <Button
        android:id="@+id/game_end_record_dialog_btn"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_end_record_dialog_et"
        android:layout_alignEnd="@id/game_end_record_dialog_et"
        android:layout_marginTop="10dp"
        android:hint="OK" />

</RelativeLayout>